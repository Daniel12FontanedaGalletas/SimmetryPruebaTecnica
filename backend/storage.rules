rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    // Regla global para la subida de imágenes de artículos
    match /media/articles/{userId}/{imageId} {

      // Permitir la lectura pública (para mostrar imágenes en la aplicación)
      allow read: if true;

      // Permitir la ESCRITURA solo si:
      // 1. El usuario está autenticado (request.auth != null)
      // 2. El UID del usuario autenticado (request.auth.uid) coincide con el ID de la carpeta (userId)
      // 3. El archivo es menor de 5MB
      // 4. El tipo de contenido es una imagen
      allow write: if request.auth != null
                   && request.auth.uid == userId
                   && request.resource.size < 5 * 1024 * 1024 // Límite de 5MB
                   && request.resource.contentType.matches('image/.*');
    }
  }
}